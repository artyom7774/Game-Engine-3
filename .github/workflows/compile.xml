name: Build Executables

on:
  push:
    branches: [ main, master ]
  pull_request:
    branches: [ main, master ]
  workflow_dispatch:

jobs:
  build:
    strategy:
      matrix:
        os: [windows-latest, ubuntu-latest, macos-latest]
        include:
          - os: windows-latest
            output_name: app.exe
            python_folder: python-windows
          - os: ubuntu-latest
            output_name: app
            python_folder: python-linux
          - os: macos-latest
            output_name: app
            python_folder: python-macos
    
    runs-on: ${{ matrix.os }}
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    
    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.11'
    
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pyinstaller
        pip install -r requirements.txt
      shell: bash
    
    - name: Download Python embeddable (Windows)
      if: runner.os == 'Windows'
      run: |
        $pythonVersion = "3.11.9"
        $url = "https://www.python.org/ftp/python/$pythonVersion/python-$pythonVersion-embed-amd64.zip"
        Invoke-WebRequest -Uri $url -OutFile python.zip
        Expand-Archive -Path python.zip -DestinationPath python
        Remove-Item python.zip
      shell: pwsh
    
    - name: Create Python folder (Linux)
      if: runner.os == 'Linux'
      run: |
        mkdir -p python
        cp -r $(python -c "import sys; print(sys.prefix)")/* python/
        # Очистка ненужных файлов для уменьшения размера
        find python -name "*.pyc" -delete
        find python -name "__pycache__" -type d -exec rm -rf {} + 2>/dev/null || true
      shell: bash
    
    - name: Create Python folder (macOS)
      if: runner.os == 'macOS'
      run: |
        mkdir -p python
        cp -r $(python -c "import sys; print(sys.prefix)")/* python/
        # Очистка ненужных файлов
        find python -name "*.pyc" -delete
        find python -name "__pycache__" -type d -exec rm -rf {} + 2>/dev/null || true
      shell: bash
    
    - name: Build with PyInstaller
      run: |
        pyinstaller --onefile --name ${{ matrix.output_name }} main.py
      shell: bash
    
    - name: Prepare release folder
      run: |
        mkdir -p release
        cp dist/${{ matrix.output_name }} release/
        cp -r python release/
      shell: bash
    
    - name: Create archive (Windows)
      if: runner.os == 'Windows'
      run: |
        Compress-Archive -Path release/* -DestinationPath ${{ matrix.os }}-build.zip
      shell: pwsh
    
    - name: Create archive (Linux/macOS)
      if: runner.os != 'Windows'
      run: |
        cd release
        tar -czf ../${{ matrix.os }}-build.tar.gz *
        cd ..
      shell: bash
    
    - name: Upload artifacts (Windows)
      if: runner.os == 'Windows'
      uses: actions/upload-artifact@v4
      with:
        name: ${{ matrix.os }}-build
        path: ${{ matrix.os }}-build.zip
    
    - name: Upload artifacts (Linux/macOS)
      if: runner.os != 'Windows'
      uses: actions/upload-artifact@v4
      with:
        name: ${{ matrix.os }}-build
        path: ${{ matrix.os }}-build.tar.gz